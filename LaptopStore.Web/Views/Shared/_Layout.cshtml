                        <li class="nav-item dropdown">
                            <a class="nav-link d-none d-sm-inline-block fs-4" href="@Url.Action("Index", "Profile")">
                                <i class="fa-solid fa-user"></i>&nbsp;<span>Profile</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-none d-sm-inline-block fs-4" href="@Url.Action("Logout", "admin_Login")">
                                <i class="fa-regular fa-right-from-bracket"></i>&nbsp;<span>Logout</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            @*Content Area Srart Here*@
            <div class="content">
                <div class="container-fluid p-0">
                    @RenderBody()
                </div>
            </div>
            @*Footer Section Start*@
