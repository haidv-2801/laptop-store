@model IEnumerable<LaptopStore.Data.Models.Supplier>
@{
    ViewBag.Title = "Danh sách nhà cung cấp";
}
@section SupplierListCSS{
<style type="text/css">
    tbody {
        max-height: calc(100vh - 71px - 300px);
    }
</style>
}
@section SupplierListJS{
<script src='~/js/Supplier/SupplierList.js'></script>
}
<div class="row">
    <div id="listArea" class="col position-relative">
        <h2 class="text-info">Danh sách nhà cung cấp</h2>
        <hr />
        <div class="d-flex justify-content-between mb-2">
            <form class="form-inline d-flex">
                <input id='search-text' class="form-control mr-sm-2" style="margin-right:8px;width:300px" placeholder="Search" aria-label="Search">
                <button id='btn-search' class="btn btn-outline-success my-2 my-sm-0">Search</button>
            </form>
            <a href="@Url.Action("Create", "Supplier")" class="btn btn btn-outline-primary">Thêm mới</a>
        </div>
        <div class="table-responsive">
            <table class="table table-condensed table-hover table-bordered table-striped table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(e => e.Name)</th>
                        <th>@Html.DisplayNameFor(e => e.ContactName)</th>
                        <th>@Html.DisplayNameFor(e => e.Phone)</th>
                        <th>@Html.DisplayNameFor(e => e.Email)</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id='table-body'>
                </tbody>
            </table>
        </div>
        <nav aria-label="Page navigation example">
            <ul id='pagination' class="pagination justify-content-end align-items-center mt-2">
            </ul>
        </nav>
    </div>
    <!-- Modal View Detail-->
    <div class="modal fade" id="supplierDetail" tabindex="-1" aria-labelledby="supplierDetailLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title" id="supplierDetailLabel">Thông tin chi tiết</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div id="supplierDetailBody" class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Confirm Delete-->
    <div class="modal fade" id="deleteConfirm" tabindex="-1" aria-labelledby="deleteConfirmLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-6" id="deleteConfirmLabel">Xác nhận</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Bạn có chắc chắn muốn xóa NCC này không?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button id="btn-delete-confirm" type="button" class="btn btn-primary btn-danger">Xóa</button>
                </div>
            </div>
        </div>
    </div>
</div>

