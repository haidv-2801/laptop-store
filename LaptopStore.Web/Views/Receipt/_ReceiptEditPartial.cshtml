@using System;
@model List<LaptopStore.Data.ModelDTO.Receipt.ReceiptProductViewDTO>;
@{
    var totalPrice = ViewBag.TotalPrice;
}
<style type="text/css">
    .detail-info {
        grid-template-columns: 30% 70%;
    }

    .detail-info .label-text {
        font-weight: 600;
    }

    #receiptDetail .modal-content {
        width: 1024px !important;
    }

    .detail-info .d-grid {
        margin-bottom: 24px;
    }

    #receiptDetail thead tr th {
        width: 200px !important;
    }

    #receiptDetail tbody tr td {
        width: 200px !important;
    }
</style>
<div class="row">
    <div class="col">
        <div class="table-responsive">
            <table class="table table-condensed table-hover table-bordered table-striped table">
                <thead>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Ảnh</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody id='table-body'>
                    @foreach (var item in @Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <img style="max-width: 100px;" src="@item.Image"></img>
                            </td>
                            <td>@item.Quantity</td>
                            <id> @item.UnitPrice</id>
                            <td>@item.Total</td>
                        </tr>
                    }
                    <tr>
                        <td></td>
                        <td></td>
                        <td> </td>
                        <td> </td>
                        <td>@totalPrice</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <nav aria-label="Page navigation example">
            <ul id='pagination' class="pagination justify-content-end align-items-center mt-2">
            </ul>
        </nav>
    </div>
</div>
