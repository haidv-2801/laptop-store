@using LaptopStore.Data.Models
@model LaptopStore.Data.Models.Product

@{
    ViewData["Title"] = "Thêm mới sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var categories = ViewBag.Categories as List<ProductCategory>;
    var positions = ViewBag.Positions as List<Position>;
}

@section ProductCreateJS {
    <script src='~/js/ProductCreate.js'></script>
}

<h2 class="text-info">@ViewData["Title"]</h2>
<hr />
<div class="row" id="createProduct">
    <div class="col-md-12">
        <div class="d-flex gap-3">
            <div class="form-group mb-2 d-none">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group flex-fill flex-shink-0 mb-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group flex-fill flex-shink-0 mb-2">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex gap-3">
            <div class="form-group flex-fill mb-2">
                <label asp-for="Unit" class="control-label"></label>
                <input asp-for="Unit" class="form-control" />
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
            <div class="form-group flex-fill mb-2">
                <label asp-for="ProductCategoryId" class="control-label"></label>
                @Html.DropDownList("ProductCategoryId", categories.Select(f => new SelectListItem(){Text = f.Name, Value=f.Id}), 
                         "--Chọn Loại sản phẩm", new { @class = "form-control fs-4", @id = "ProductCategoryId", @name = "ProductCategoryId" })
                <span asp-validation-for="ProductCategoryId" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex gap-3">
            <div class="form-group flex-fill mb-2">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group flex-fill mb-2">
                <label asp-for="Ram" class="control-label"></label>
                <input asp-for="Ram" class="form-control" />
                <span asp-validation-for="Ram" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex gap-3">
            <div class="form-group flex-fill mb-2">
                <label asp-for="Cpu" class="control-label"></label>
                <input asp-for="Cpu" class="form-control" />
                <span asp-validation-for="Cpu" class="text-danger"></span>
            </div>
            <div class="form-group flex-fill mb-2">
                <label asp-for="Screen" class="control-label"></label>
                <input asp-for="Screen" class="form-control" />
                <span asp-validation-for="Screen" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex gap-3">
            <div class="form-group flex-fill mb-2">
                <label asp-for="Pin" class="control-label"></label>
                <input asp-for="Pin" class="form-control" />
                <span asp-validation-for="Pin" class="text-danger"></span>
            </div>
            <div class="form-group flex-fill mb-2">
                <label asp-for="Origin" class="control-label"></label>
                <input asp-for="Origin" class="form-control" />
                <span asp-validation-for="Origin" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group mb-2">
            <label asp-for="WarrantyTime" class="control-label"></label>
            <input asp-for="WarrantyTime" class="form-control" />
            <span asp-validation-for="WarrantyTime" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="LunchTime" class="control-label"></label>
            <input asp-for="LunchTime" class="form-control" />
            <span asp-validation-for="LunchTime" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="PositionId" class="control-label"></label>
            @Html.DropDownList("PositionId", positions.Select(f => new SelectListItem() { Text = f.Name, Value = f.Id }),
                     "--Chọn Vị trí", new { @class = "form-control fs-4", @id = "PositionId", @name = "PositionId" })
            <span asp-validation-for="PositionId" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Image" class="control-label"></label>
            <input type="file" asp-for="Image" class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group mb-2 ms-auto float-end mt-2">
            <input type="button" onclick="ProductCreate()" value="Lưu" class="btn btn-primary btn btn-success" />
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn mt-2 btn-danger btn-sm fs-4"><i class="fa-regular fa-hand-back-point-left"></i>Quay về danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
