@using LaptopStore.Data.Models
@model LaptopStore.Data.Models.Product

@{
    ViewData["Title"] = "Sửa thông tin sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var categories = ViewBag.Categories as List<ProductCategory>;
    var positions = ViewBag.Positions as List<Position>;
}
@section ProductUpdateJS {
    <script src='~/js/ProductUpdate.js'></script>
}


<h2 class="text-info">@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-12" id="updateProduct">
        <form id="update-product-form">
            <div class="row mb-2">
                <div id="msg">
                </div>
            </div>
            <div class="d-flex gap-3">
                <div class="form-group mb-2 flex-fill d-none">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group flex-fill mb-2">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group flex-fill mb-2">
                    <label asp-for="UnitPrice" class="control-label"></label>
                    <input asp-for="UnitPrice" class="form-control" />
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex gap-3">
                <div class="form-group flex-fill mb-2">
                    <label asp-for="Unit" class="control-label"></label>
                    <input asp-for="Unit" class="form-control" />
                    <span asp-validation-for="Unit" class="text-danger"></span>
                </div>
                <div class="form-group flex-fill mb-2">
                    <label asp-for="ProductCategoryId" class="control-label"></label>
                    @* <input asp-for="ProductCategoryId" class="form-control" /> *@
                    @Html.DropDownList("ProductCategoryId", categories.Select(f => new SelectListItem() { Text = f.Name, Value = f.Id }),
                             "--Chọn Loại sản phẩm", new { @value = Model.ProductCategoryId, @class = "form-control fs-4", @id = "ProductCategoryId", @name = "ProductCategoryId" })
                    <span asp-validation-for="ProductCategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex gap-3">
                <div class="form-group flex-fill mb-2">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group flex-fill mb-2">
                    <label asp-for="Ram" class="control-label"></label>
                    <input asp-for="Ram" class="form-control" />
                    <span asp-validation-for="Ram" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex gap-3">
                <div class="form-group flex-fill mb-2">
                    <label asp-for="Cpu" class="control-label"></label>
                    <input asp-for="Cpu" class="form-control" />
                    <span asp-validation-for="Cpu" class="text-danger"></span>
                </div>
                <div class="form-group flex-fill mb-2">
                    <label asp-for="Screen" class="control-label"></label>
                    <input asp-for="Screen" class="form-control" />
                    <span asp-validation-for="Screen" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex gap-3">
                <div class="form-group mb-2 flex-fill">
                    <label asp-for="Pin" class="control-label"></label>
                    <input asp-for="Pin" class="form-control" />
                    <span asp-validation-for="Pin" class="text-danger"></span>
                </div>
                <div class="form-group mb-2 flex-fill">
                    <label asp-for="Origin" class="control-label"></label>
                    <input asp-for="Origin" class="form-control" />
                    <span asp-validation-for="Origin" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group mb-2 flex-fill">
                <label asp-for="WarrantyTime" class="control-label"></label>
                <input asp-for="WarrantyTime" class="form-control" />
                <span asp-validation-for="WarrantyTime" class="text-danger"></span>
            </div>
            <div class="form-group mb-2 flex-fill">
                <label asp-for="LunchTime" class="control-label"></label>
                <input asp-for="LunchTime" class="form-control" />
                <span asp-validation-for="LunchTime" class="text-danger"></span>
            </div>

            <div class="form-group mb-2 flex-fill">
                <label asp-for="PositionId" class="control-label"></label>
                @* <input asp-for="PositionId" class="form-control" /> *@
                @Html.DropDownList("PositionId", positions.Select(f => new SelectListItem() { Text = f.Name, Value = f.Id }),
                         "--Chọn Vị trí", new { @value = Model.PositionId, @class = "form-control fs-4", @id = "PositionId", @name = "PositionId" })
                <span asp-validation-for="PositionId" class="text-danger"></span>
            </div>
            <div class="form-group mb-2 flex-fill">
                <label asp-for="Image" class="control-label"></label>
                <input value="@Model.Image" accept=".jpg, .png, .jpeg, .gif, .bmp, .tif, .tiff|image/*" type="file" asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>


            <div id="productImage" class="form-group mb-2 flex-fill">
                <img style="max-width: 300px;" src="@Model.Image" />
            </div>

            <div class="form-group d-none mb-2">
                <label asp-for="CreatedDate" class="control-label"></label>
                <input asp-for="CreatedDate" class="form-control" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group d-none mb-2">
                <label asp-for="CreatedBy" class="control-label"></label>
                <input asp-for="CreatedBy" class="form-control" />
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group d-none mb-2">
                <label asp-for="ModifiedDate" class="control-label"></label>
                <input asp-for="ModifiedDate" class="form-control" />
                <span asp-validation-for="ModifiedDate" class="text-danger"></span>
            </div>
            <div class="form-group d-none mb-2">
                <label asp-for="ModifiedBy" class="control-label"></label>
                <input asp-for="ModifiedBy" class="form-control" />
                <span asp-validation-for="ModifiedBy" class="text-danger"></span>
            </div>
            <div class="col-md-12 d-flex justify-content-lg-end mt-2">
                <button btn-save class="btn btn-success btn-lg col-4" onclick="UpdateProduct('@Model.Id')">Lưu</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
