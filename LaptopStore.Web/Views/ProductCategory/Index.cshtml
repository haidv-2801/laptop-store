@model IEnumerable<LaptopStore.Data.ModelDTO.ProductCategory.ProductCategoryListDTO>
@{
    ViewBag.Title = "Danh sách danh mục sản phẩm";
}
@section ProductCategoryListCSS {
    <style type="text/css">
        tbody {
            max-height: calc(100vh - 71px - 300px);
        }
    </style>
}
@section ProductCategoryListJS {
    <script src='~/js/ProductCategory/ProductCategoryList.js'></script>
}
<div class="row">
    <div id="listArea" class="col position-relative">
        <h2 class="text-info">Danh sách danh mục sản phẩm</h2>
        <hr />
        <div class="d-flex justify-content-between mb-2">
            <form class="form-inline d-flex">
                <input id='search-text' class="form-control mr-sm-2" style="margin-right:8px;width:300px" placeholder="Tìm kiếm" aria-label="Search">
                <button id='btn-search' class="btn btn-outline-success my-2 my-sm-0">Tìm kiếm</button>
            </form>
            <button class="btn btn btn-outline-primary" onclick="handleOpenCreateModal()">Thêm mới</button>
        </div>
        <div class="table-responsive">
            <table class="table table-condensed table-hover table-bordered table-striped table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(e => e.Name)</th>
                        <th>@Html.DisplayNameFor(e => e.ProductQuantity)</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id='table-body'>
                </tbody>
            </table>
        </div>
        <nav aria-label="Page navigation example">
            <ul id='pagination' class="pagination justify-content-end align-items-center mt-2">
                @*<li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Trước</span>
                </a>
                </li>
                <li class="page-item"><a class="page-link" href="#" data-page="1">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Sau</span>
                </a>
                </li>*@
            </ul>
        </nav>
    </div>
    <!-- Modal Create-->
    <div class="modal fade" id="productCategoryCreate" tabindex="-1" aria-labelledby="productCategoryCreateLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title" id="productCategoryCreateLabel">Thêm mới danh mục</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div id="productCategoryCreateBody" class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-success" onclick="handleSaveCreateData()">Lưu</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Update-->
    <div class="modal fade" id="productCategoryUpdate" tabindex="-1" aria-labelledby="productCategoryUpdateLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title" id="productCategoryUpdateLabel">Sửa danh mục</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div id="productCategoryUpdateBody" class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-success" onclick="handleSaveUpdateData()">Lưu</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal View Detail-->
    <div class="modal fade" id="productCategoryDetail" tabindex="-1" aria-labelledby="productCategoryDetailLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title" id="productCategoryDetailLabel">Thông tin chi tiết</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div id="productCategoryDetailBody" class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Confirm Delete-->
    <div class="modal fade" id="deleteConfirm" tabindex="-1" aria-labelledby="deleteConfirmLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-6" id="deleteConfirmLabel">Xác nhận</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Bạn có chắc chắn muốn xóa danh mục này không?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button id="btn-delete-confirm" type="button" class="btn btn-primary btn-danger">Xóa</button>
                </div>
            </div>
        </div>
    </div>
</div>
@* Alert *@
<div id="productCategoryToast" style="z-index:1100" class="toast align-items-center position-absolute top-0 end-0 bg-warning" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="3000">
    <div class="d-flex">
        <div id="productCategoryToastBody" class="toast-body">
        </div>
        <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>
<div id="deleteExistsProductToast" class="toast align-items-center position-absolute top-0 end-0 bg-warning" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="3000">
    <div class="d-flex">
        <div class="toast-body">
            Tồn tại sản phẩm trong danh mục. Không thể xóa
        </div>
        <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>
<div id="deleteSuccessToast" class="toast align-items-center position-absolute top-0 end-0 bg-success" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="3000">
    <div class="d-flex">
        <div class="toast-body">
            Xóa danh mục sản phẩm thành công
        </div>
        <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>
<div id="deleteFailedToast" class="toast align-items-center position-absolute top-0 end-0 bg-success" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="3000">
    <div class="d-flex">
        <div class="toast-body">
            Xóa danh mục sản phẩm thất bại
        </div>
        <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>
<div id="createSuccessToast" class="toast align-items-center position-absolute top-0 end-0 bg-success" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="3000">
    <div class="d-flex">
        <div class="toast-body">
            Thêm danh mục sản phẩm thành công
        </div>
        <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>
<div id="createFailedToast" class="toast align-items-center position-absolute top-0 end-0 bg-success" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="3000">
    <div class="d-flex">
        <div class="toast-body">
            Thêm danh mục sản phẩm thất bại
        </div>
        <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>
<div id="updateSuccessToast" class="toast align-items-center position-absolute top-0 end-0 bg-success" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="3000">
    <div class="d-flex">
        <div class="toast-body">
            Sửa danh mục sản phẩm thành công
        </div>
        <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>
<div id="updateFailedToast" class="toast align-items-center position-absolute top-0 end-0 bg-success" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="3000">
    <div class="d-flex">
        <div class="toast-body">
            Sửa danh mục sản phẩm thất bại
        </div>
        <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>

